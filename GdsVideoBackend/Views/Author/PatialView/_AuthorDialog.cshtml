
<div id="add-new-author" class="modal fade" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <h3 class="m-t-none m-b">Sign in</h3>
                        <form id="author-form" role="form" action="@Url.Action("Insert", "Author")" encty enctype="multipart/form-data">
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <label>Tên tác giả</label> <input name="AuthorName" type="text" placeholder="Tên gói" class="author_name form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <div class="col-sm-8"><label>Ảnh đại diện</label></div>
                                    <div class="col-sm-4"><button id="replace-photo" class="btn btn-success btn-sm">Thêm ảnh</button></div>
                                    <input type="file" id="replace-photo-tag" style="display: none" name="AuthorImage" accept="images/*">
                                </div>
                                <div class="col-sm-6">
                                    <img id="image-photo" src="" width="300" height="200" />
                                </div>
                            </div>
                            <div class="wrapper wrapper-content row">
                                <div class="col-lg-12">
                                    <div class="ibox float-e-margins">
                                        <div class="ibox-title">
                                            <h5>Thông tin tác giả</h5>
                                            <button id="edit" class="btn btn-primary btn-xs m-l-sm" type="button">Edit</button>
                                            <button id="save" class="btn btn-primary  btn-xs" type="button">Save</button>
                                        </div>
                                        <div class="ibox-content no-padding">
                                            <div class="wrapper p-md author-content">

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <a id="save-author" class="btn btn-sm btn-primary pull-right m-t-n-xs"><strong>Save</strong></a>
                            </div>
                            <input type="hidden" name="AuthorId" class="author-id" value="0" />
                            <input type="hidden" name="Content" class="content" value="" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

