<script id="authorTemplate" type="text/x-jquery-tmpl">
    <table class="table table-striped table-bordered table-hover dataTable dtr-inline" id="author_Table" role="grid" aria-describedby="DataTables_Table_0_info">
        <thead>
            <tr role="row">
                <th class="sorting_asc" tabindex="0" aria-controls="author_Table" rowspan="1" colspan="1" aria-sort="ascending" style="width: 189px;">Tên tác giả</th>
                <th class="sorting_asc" tabindex="0" aria-controls="author_Table" rowspan="1" colspan="1" aria-sort="ascending" style="width: 189px;">Thông tin tác giả</th>
                <th tabindex="0" aria-controls="author_Table" rowspan="1" colspan="1" style="width: 115px;"></th>
            </tr>
        </thead>
        <tbody>
            {{each Result}}
            <tr class="gradeA odd" role="row" id="${$value.AuthorId}">
                <td class="author_name" data-filetype="${$value.MimeTypeImage}" data-file="${$value.ThumbnailImage}">${$value.AuthorName}</td>
                <td class="author-detail">{{html $value.AuthorDetail}}</td>
                <td class="center">
                    <a class="btn btn-sm btn-success btn-rounded" onclick="bindingAuthorFrom(this)" data-id="${$value.AuthorId}" data-toggle="modal" href="#add-new-author">Edit</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</script>

