<script id="categoryTemplate" type="text/x-jquery-tmpl">
    <table class="table table-striped table-bordered table-hover dataTable dtr-inline" id="categoryTemplate_Table" role="grid" aria-describedby="DataTables_Table_0_info">
        <thead>
            <tr role="row">
                <th class="sorting_asc" tabindex="0" aria-controls="categoryTemplate_Table" rowspan="1" colspan="1" aria-sort="ascending" style="width: 189px;">Tên mục</th>
                <th class="sorting_asc" tabindex="0" aria-controls="categoryTemplate_Table" rowspan="1" colspan="1" aria-sort="ascending" style="width: 189px;">nội dung</th>
                <th class="sorting" tabindex="0" aria-controls="categoryTemplate_Table" rowspan="1" colspan="1" style="width: 162px;">Ngày tạo</th>
                <th tabindex="0" aria-controls="categoryTemplate_Table" rowspan="1" colspan="1" style="width: 115px;"></th>
            </tr>
        </thead>
        <tbody>
            {{each Result}}
            <tr class="gradeA odd" role="row" id="${$value.CategoryId}">
                <td class="categorty" data-id="${$value.CategoryId}">${$value.CategoryName}</td>
                <td class="detail">${$value.CategoryDetail}</td>
                <td class="date">${$value.DateTime}</td>
                <td class="actions">
                    <a class="btn btn-sm btn-success btn-rounded" href="categorytype?categoryId=${$value.CategoryId}" target="_blank">Category Types</a>
                    <a class="btn btn-sm btn-success btn-rounded" onclick="bindingCategoryFrom(this)" data-id="${$value.CategoryId}" data-toggle="modal" href="#add-new-category">Edit</a>
                    <a class="btn btn-sm btn-danger btn-rounded" onclick="deleteCategoryDetail(this)" data-id="${$value.CategoryId}" href="#">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</script>
