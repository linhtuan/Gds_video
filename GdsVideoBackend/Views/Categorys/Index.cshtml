
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section left_menu
{
    @Html.Partial("~/Views/PartialViews/_LeftMenuPartial.cshtml")
}
<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-content">
            <div class="table-responsive">
                <div class="dataTables_wrapper form-inline">
                    <div class="clear"></div>
                    <div class="dataTables_length">
                        <div class="col-sm-3">
                            <label>
                                <select class="form-control input-sm">
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                </select> records per page
                            </label>
                        </div>
                        <div class="col-sm-3">
                            <a data-toggle="modal" class="btn btn-success btn-sm category-box" href="#add-new-category">Thêm chủ đề</a>
                        </div>
                    </div>
                    <div class="dataTables_filter">
                        <label>Search:<input type="search" class="form-control input-sm" placeholder=""></label>
                    </div>
                    <div id="category_Div">

                    </div>
                    <div class="paging_simple_numbers">
                        <div class="col-lg-12">
                            <div class="col-lg-4"></div>
                            <div class="col-lg-4 paging-row hide">
                                <a class="btn btn-default btn-sm prev" href="#"><i class="fa fa-angle-left"></i> Previous</a>
                                <input type="text" class="input-mini">&nbsp;of&nbsp;<a class="total-row">0</a>
                                <a class="btn btn-default btn-sm next" href="#">Next <i class="fa fa-angle-right"></i></a>
                            </div>
                            <div class="col-lg-4"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="add-new-category" class="modal fade" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <h3 class="m-t-none m-b">Thêm Chủ đề</h3>
                        <form id="category-form" class="row" role="form">
                            <div class="form-group col-sm-12">
                                <div class="col-sm-6">
                                    <label>Tên chủ đề</label> <input type="text" placeholder="Tên chủ đề" class="category-name form-control">
                                </div>
                                <div class="col-sm-6">
                                    <label>Chi tiết chủ đề</label> <input type="text" placeholder="Chi tiết chủ đề" class="category-detail form-control">
                                </div>
                            </div>
                            <div class="form-group col-sm-12">
                                <a id="save" class="btn btn-sm btn-primary pull-right m-t-n-xs"><strong>Save</strong></a>
                            </div>
                            <input type="hidden" id="category-id" value="0"/>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("~/Views/Categorys/PatialView/_CategoryTemplate.cshtml")

@section scripts{
    <script src="~/Scripts/jquery.tmpl.js"></script>
    <script src="~/Scripts/gds.paging.control.js"></script>
    <script src="~/Scripts/gds.category.js"></script>
}