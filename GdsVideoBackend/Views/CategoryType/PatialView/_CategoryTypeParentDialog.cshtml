@model GdsVideoBackend.Models.CategoryTypeFromViewModel

<div id="add-new-category-type-parent" class="modal fade" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <h3 class="m-t-none m-b">Sign in</h3>
                        <form id="category-type-parent-form" role="form" action="@Url.Action("Insert", "CategoryType")" enctype="multipart/form-data">
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <label>Tên gói</label> <input name="CategoryTypeName" type="text" placeholder="Tên gói" class="category-type-name form-control">
                                </div>
                                <div class="col-sm-6">
                                    <label>Giá tiền</label>
                                    <select class="form-control m-b price" name="Price">
                                        @foreach (var item in Model.PriceSetting)
                                        {
                                            <option value="@item.Id" @(Model.PriceSetting.First() == item ? "selected='selected'" : "")>@item.Price</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-6">
                                    <label>Giá tiền</label>
                                    <select class="form-control m-b age-order" name="AgeOrder">
                                        @foreach (var item in Model.AgeOrderSetting)
                                        {
                                            <option value="@item.Id" @(Model.AgeOrderSetting.First() == item ? "selected='selected'" : "")>@item.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-6">
                                    <label>Thứ tự gói</label>
                                    <select class="form-control m-b categorytype-order" name="CategoryTypeOrder">
                                        <option value="0">-- Mắc định --</option>
                                        <option value="100">Thấp</option>
                                        <option value="200">Trung bình</option>
                                        <option value="300">Cao</option>
                                    </select>
                                </div>
                                <div class="col-sm-6">
                                    <label>Tên tác giả</label>
                                    <select class="form-control m-b author" name="Author">
                                        <option value="0">-- Chọn tác giả --</option>
                                        @foreach (var item in Model.AuthorSettings)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </select>

                                </div>
                                <div class="col-sm-6">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <div class="col-sm-8"><label>Ảnh đại diện</label></div>
                                    <div class="col-sm-4"><button id="replace-photo" class="btn btn-success btn-sm">Thêm ảnh</button></div>
                                    <input type="file" id="replace-photo-tag" style="display: none" name="FileThumbnail" accept="images/*">
                                </div>
                                <div class="col-sm-6">
                                    <img id="image-photo" src="" width="300" height="200" />
                                </div>
                            </div>
                            <div class="wrapper wrapper-content row">
                                <div class="col-lg-12">
                                    <div class="ibox float-e-margins">
                                        <div class="ibox-title">
                                            <h5>Nội dung</h5>
                                            <button id="edit" class="btn btn-primary btn-xs m-l-sm" type="button">Edit</button>
                                            <button id="save" class="btn btn-primary  btn-xs" type="button">Save</button>
                                        </div>
                                        <div class="ibox-content no-padding">
                                            <div class="wrapper p-md cateogry-type-content">

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <a id="save-parent" class="btn btn-sm btn-primary pull-right m-t-n-xs"><strong>Save</strong></a>
                            </div>
                            <input type="hidden" name="CategoryTypeId" class="category-type-id" value="0" />
                            <input type="hidden" name="CategoryId" class="category-id" value="0" />
                            <input type="hidden" name="Content" class="content" value="" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

