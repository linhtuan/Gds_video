@section scripts{
    <script src="~/Scripts/jquery.tmpl.js"></script>
    <script src="~/Scripts/gds.paging.control.js"></script>
    <script src="~/Scripts/gds.categorytype.js"></script>
    <script src="~/Content/js/plugins/summernote/summernote.min.js"></script>
    <script>
        $(document).on('click', '#category-type-parent-form #edit', function (event) {
            $('#category-type-parent-form .cateogry-type-content').summernote({ focus: true });
        });

