                        <div class="ibox float-e-margins">
                            <div class="ibox-content">
                                <div class="table-responsive">
                                    <div class="dataTables_wrapper form-inline">
                                        <div class="clear"></div>
                                        <div class="dataTables_length">
                                            <div class="col-sm-3">
