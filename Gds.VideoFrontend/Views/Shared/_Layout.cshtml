<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
</head>
<body class="courses_page _hasRecRequest _detail_page">
    <header>
        <div class="header-inner rel">
            <div class="container-fluid">
                <div class="header-col header-col-left">
                    <div class="hd-categories pull-left">
                        <div class="btn-group cats-dropdown">
                            <div aria-expanded="false" aria-haspopup="true" class="dropdown-toggle active-nav-2 active-nav-with-text" data-dropdown-container=".slider-sidebar-wrapper.slider-sidebar-mobile" data-fixed="false" data-toggle="dropdown">
                                <i class="fa fa-bars"></i>
                                <span class="active-nav-text">Danh sách chủ đề</span>
                            </div>
                            @Html.Action("MenuTopPage", "Home")
                        </div>
                    </div>
                    <div class="hd-search pull-left">
                        <div class="search-box">
                            <form action="https://edumall.vn/search" class="search-form" method="GET">
                                <input autofocus="" class="course-search" name="q" type="text">
                                <button type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </form>
                        </div>

                        <div class="btn-group search-dropdown">
                            <div aria-expanded="false" aria-haspopup="true" class="dropdown-toggle" data-toggle="dropdown" type="button">
                                <i class="fa fa-search"></i>
                            </div>
                            <div class="dropdown-menu">
                                <div class="search-box">
                                    <div class="search-box">
                                        <form action="https://edumall.vn/search" class="search-form" method="GET">
                                            <input autofocus="" class="course-search" name="q" type="text">
                                            <button type="submit">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="header-col header-col-mid">
                    <div class="hd-brand">
                        <div class="logo">
                            <a class="logo-medium" href="https://edumall.vn/courses"><img src="#" alt="Logo"></a>
                            <a class="logo-small" href="https://edumall.vn/courses"><img src="#" alt="Logo small"></a>
                        </div>
                    </div>
                </div>
                <div class="header-col text-right header-col-right">
                    @Html.Action("MiniAccountProfile", "Account", new { pageIndex = 2 })
                </div>
            </div>
        </div>
    </header>
