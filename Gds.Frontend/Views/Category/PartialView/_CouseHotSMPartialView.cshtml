@model List<Gds.Frontend.Models.CoursesViewModel>
@foreach (var item in Model)
{
    <div class="search-card">
        <a href="@item.UrlCourse">
        </a>
        <div class="row no-margin rel">
            <a href="@item.UrlCourse">
                <div class="image-course pull-left" style="background-image: url(data:image/@item.MimeTypeImage;base64,@item.ThumbnailImage)"></div>
                <div class="content-course">
                    <div class="name-course">@item.CourseName</div>
                    <div class="about-author">
                        <span>Tuan Linh</span>
                        <span></span>
                    </div>
                    <div class="info-course row no-margin">
                        <div class="real-price info-item">
                            @(item.Price)đ
                        </div>
                        <div id="rating">
                            <div class="search-rating">
                                <div class="search-rating-star">
                                    <div class="pull-left" id="percent-rating">
                                        <i class="fa fa-star rated"></i>
                                        <i class="fa fa-star rated"></i>
                                        <i class="fa fa-star rated"></i>
                                        <span class="rating-percent">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star percent" style="width: 70.00000000000001%"></i>
                                        </span>
                                        <i class="fa fa-star"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="short-rating">
                            <i class="fa fa-star rated">
                                <span class="course-people-rating"> 3.7</span>
                            </i>
                        </div>
                    </div>
                </div>
            </a>
            <div class="course-wishlist abs">
                <a href="@item.UrlCourse">
                </a>
                <a class="wishlist-heart" val="5627585fd8b7313836000002">
                    <svg height="18" preserveAspectRatio="xMidYMid" viewBox="0 0 20 18" width="18" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns="http://www.w3.org/2000/svg">
                        <defs>
                            <style>
                                .heart {
                                    fill: #ffffff;
                                    stroke: # none;
                                    stroke-linejoin: round;
                                    stroke-width: 1px;
                                    fill-rule: evenodd;
                                }

                                .heart:hover {
                                    fill: #ffffff;
                                }

                                .wishlist {
                                    fill: #ffffff;
                                }
                            </style>
                        </defs>
                        <path class="heart" d="M10.000,17.000 L8.740,15.783 C4.060,11.783 1.000,9.087 1.000,5.783 C1.000,3.087 3.160,1.000 5.950,1.000 C7.480,1.000 9.010,1.696 10.000,2.826 C10.990,1.696 12.520,1.000 14.050,1.000 C16.840,1.000 19.000,3.087 19.000,5.783 C19.000,9.087 15.940,11.783 11.260,15.783 L10.000,17.000 Z"></path>
                    </svg>
                    <div class="wishlist-tooltip">
                        <div class="wishlist-tooltip-bg">
                            <i class="fa fa-sort-asc wishlist-tooltip-arrow"></i>
                        </div>
                        <div class="wishlist-tooltip-inner">
                            <span style="font-size: 12px;">Quan tâm</span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
}
